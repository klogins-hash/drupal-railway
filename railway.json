{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "./Dockerfile.drupal"
  },
  "deploy": {
    "startCommand": "apache2-foreground",
    "restartPolicy": "unless_stopped",
    "numReplicas": 1,
    "healthchecks": {
      "liveness": {
        "command": "curl --fail http://localhost/",
        "interval": 30,
        "timeout": 10,
        "retries": 3
      }
    }
  }
}
